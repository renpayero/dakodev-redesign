---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto | Dakodev Software Solutions">
	<main class="pt-32 pb-20 relative z-10">
		<div class="container mx-auto px-6">
			<div class="max-w-4xl mx-auto">
                <div class="text-center mb-16">
                     <div class="text-accent-cyan font-bold tracking-widest uppercase text-sm mb-4">Hablemos</div>
                    <h1 class="font-heading text-5xl md:text-6xl font-bold mb-6">
                        Inicia tu <span class="text-gradient">Transformación</span>
                    </h1>
                     <p class="text-gray-400 text-lg leading-relaxed max-w-2xl mx-auto">
                        Cuéntanos sobre tu proyecto. Ya sea una web corporativa o un ERP complejo, estamos listos para escucharte.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    <!-- Contact Info -->
                    <div class="space-y-8">
                         <div class="glass p-8 rounded-3xl border border-white/5">
                            <h3 class="font-heading text-2xl font-bold mb-6">Información de Contacto</h3>
                            <ul class="space-y-6">
                                <li class="flex items-center group cursor-pointer">
                                    <div class="w-10 h-10 rounded-lg bg-accent-cyan/10 flex items-center justify-center mr-4 group-hover:bg-accent-cyan group-hover:text-dark transition-all duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white transition-colors">+54 9 2477 610100</span>
                                </li>
                                <li class="flex items-center group cursor-pointer">
                                    <div class="w-10 h-10 rounded-lg bg-accent-blue/10 flex items-center justify-center mr-4 group-hover:bg-accent-blue group-hover:text-dark transition-all duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                        </svg>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white transition-colors">renzopayero@hotmail.com</span>
                                </li>
                                <li class="flex items-center group cursor-pointer">
                                    <div class="w-10 h-10 rounded-lg bg-accent-teal/10 flex items-center justify-center mr-4 group-hover:bg-accent-teal group-hover:text-dark transition-all duration-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                    </div>
                                    <span class="text-gray-300 group-hover:text-white transition-colors">Rosario, Argentina</span>
                                </li>
                            </ul>
                            
                            <div class="mt-8 pt-8 border-t border-white/5">
                                <a href="https://wa.me/5492477610100" target="_blank" class="w-full flex items-center justify-center px-6 py-4 bg-accent-cyan text-dark font-bold rounded-xl hover:bg-white transition-all duration-300 hover:scale-105 shadow-lg shadow-accent-cyan/20">
                                    Chat en WhatsApp
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Form Mockup -->
                    <div class="glass p-8 rounded-3xl border border-white/5">
                        <form class="space-y-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-400 mb-2">Nombre</label>
                                <input type="text" class="w-full bg-dark-lighter/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan transition-colors" placeholder="Tu nombre" />
                            </div>
                             <div>
                                <label class="block text-sm font-medium text-gray-400 mb-2">Email</label>
                                <input type="email" class="w-full bg-dark-lighter/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan transition-colors" placeholder="tu@email.com" />
                            </div>
                             <div>
                                <label class="block text-sm font-medium text-gray-400 mb-2">Mensaje</label>
                                <textarea rows="4" class="w-full bg-dark-lighter/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan focus:ring-1 focus:ring-accent-cyan transition-colors" placeholder="¿Cómo podemos ayudarte?"></textarea>
                            </div>
                            <button type="submit" class="w-full px-6 py-4 bg-gradient-to-r from-accent-cyan to-accent-blue text-dark font-bold rounded-xl hover:opacity-90 transition-opacity shadow-lg shadow-accent-cyan/20">
                                Enviar Mensaje
                            </button>
                        </form>
                    </div>
                </div>
			</div>
		</div>
	</main>
</Layout>
