---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto | Dakodev Software Solutions">
  <main class="pt-32 pb-20 relative z-10">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <div
            class="text-accent-cyan font-bold tracking-widest uppercase text-sm mb-4"
          >
            Hablemos
          </div>
          <h1 class="font-heading text-5xl md:text-6xl font-bold mb-6">
            Inicia tu <span class="text-gradient">Transformación</span>
          </h1>
          <p class="text-gray-400 text-lg leading-relaxed max-w-2xl mx-auto">
            Cuéntanos sobre tu proyecto. Ya sea una web corporativa o un ERP
            complejo, estamos listos para escucharte.
          </p>
        </div>

        <div
          class="glass rounded-3xl border border-white/5 overflow-hidden grid grid-cols-1 md:grid-cols-2"
        >
          <!-- Contact Info Section (Left/Top) -->
          <div class="p-8 md:p-12 bg-white/5 flex flex-col h-full">
            <div>
              <h3 class="font-heading text-2xl font-bold mb-6">
                Información de Contacto
              </h3>
              <p class="text-gray-400 text-sm mb-10 leading-relaxed">
                Estamos listos para escalar tu negocio al siguiente nivel. Elige
                el canal que prefieras.
              </p>

              <ul class="space-y-8">
                <!-- Phone -->
                <li class="flex items-start group">
                  <div
                    class="shrink-0 w-10 h-10 rounded-lg bg-accent-cyan/10 flex items-center justify-center mr-4 group-hover:bg-accent-cyan group-hover:text-dark transition-all duration-300"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path></svg
                    >
                  </div>
                  <div>
                    <span class="block text-white font-medium text-lg"
                      >+54 9 2477 61-0100</span
                    >
                    <span class="text-gray-500 text-sm"
                      >Lunes a Viernes, 9hs - 18hs</span
                    >
                  </div>
                </li>

                <!-- Email -->
                <li class="flex items-start group">
                  <div
                    class="shrink-0 w-10 h-10 rounded-lg bg-accent-blue/10 flex items-center justify-center mr-4 group-hover:bg-accent-blue group-hover:text-dark transition-all duration-300"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path></svg
                    >
                  </div>
                  <div>
                    <span class="block text-white font-medium break-all"
                      >administracion@dakodev.com</span
                    >
                    <span class="text-gray-500 text-sm"
                      >Respuesta en menos de 24hs</span
                    >
                  </div>
                </li>

                <!-- Location -->
                <li class="flex items-start group">
                  <div
                    class="shrink-0 w-10 h-10 rounded-lg bg-accent-teal/10 flex items-center justify-center mr-4 group-hover:bg-accent-teal group-hover:text-dark transition-all duration-300"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-5 h-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                      ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                    >
                  </div>
                  <div>
                    <span class="block text-white font-medium"
                      >Rosario, Argentina</span
                    >
                    <span class="text-gray-500 text-sm"
                      >Disponible para todo el mundo</span
                    >
                  </div>
                </li>
              </ul>
            </div>

            <div class="mt-8 md:mt-auto pt-8 relative">
              <a
                href="https://wa.me/5492477610100"
                target="_blank"
                class="group w-full flex items-center justify-center px-6 py-4 bg-[#25D366] text-white font-bold rounded-xl hover:bg-[#20bd5a] transition-all duration-300 hover:scale-[1.02] shadow-lg shadow-[#25D366]/20"
              >
                <svg
                  class="w-6 h-6 mr-3 fill-current"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 448 512"
                  ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                  <path
                    d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"
                  ></path></svg
                >
                Chat en WhatsApp
              </a>
              <p
                class="absolute -bottom-6 left-0 right-0 text-center text-xs text-gray-500"
              >
                Respuesta inmediata
              </p>
            </div>
          </div>

          <!-- Form Section (Right/Bottom) -->
          <div class="p-8 md:p-12 h-full flex flex-col relative">
            <!-- Success Overlay -->
            <div id="success-overlay" class="absolute inset-0 bg-dark/95 backdrop-blur-sm flex flex-col items-center justify-center opacity-0 pointer-events-none transition-all duration-500 z-10 rounded-3xl">
              <div class="success-icon mb-6">
                <svg class="w-24 h-24" viewBox="0 0 100 100">
                  <circle class="circle" cx="50" cy="50" r="45" fill="none" stroke="#00d9ff" stroke-width="4"/>
                  <path class="check" d="M30 50 L45 65 L70 35" fill="none" stroke="#00d9ff" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h3 class="font-heading text-2xl font-bold text-white mb-2">¡Email enviado!</h3>
              <p class="text-gray-400">Te responderemos pronto.</p>
            </div>

            <form id="contact-form" class="flex flex-col h-full">
              <div class="space-y-5 grow">
                <div>
                  <label class="block text-sm font-medium text-gray-400 mb-2">Nombre</label>
                  <input
                    type="text"
                    name="name"
                    required
                    class="w-full bg-dark-lighter/80 border border-gray-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors placeholder-gray-600"
                    placeholder="Tu nombre"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-400 mb-2">Email</label>
                  <input
                    type="email"
                    name="email"
                    required
                    class="w-full bg-dark-lighter/80 border border-gray-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors placeholder-gray-600"
                    placeholder="tu@email.com"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-400 mb-2">Servicio de interés</label>
                  <select
                    name="subject"
                    required
                    class="w-full bg-dark-lighter/80 border border-gray-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors cursor-pointer appearance-none"
                    style="background-image: url('data:image/svg+xml;charset=UTF-8,%3Csvg xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22 width%3D%2224%22 height%3D%2224%22 viewBox%3D%220 0 24 24%22 fill%3D%22none%22 stroke%3D%22%239ca3af%22 stroke-width%3D%222%22%3E%3Cpath d%3D%22M6 9l6 6 6-6%22%2F%3E%3C%2Fsvg%3E'); background-repeat: no-repeat; background-position: right 12px center; background-size: 20px;"
                  >
                    <option value="" disabled selected class="bg-dark text-gray-500">Selecciona un servicio...</option>
                    <option value="DAKO・WEB - Desarrollo Web Profesional" class="bg-dark text-white">DAKO・WEB - Desarrollo Web Profesional</option>
                    <option value="DAKO・CORE - Sistema de Gestión Empresarial" class="bg-dark text-white">DAKO・CORE - Sistema de Gestión Empresarial</option>
                    <option value="DAKO・HYBRID - Soluciones a Medida" class="bg-dark text-white">DAKO・HYBRID - Soluciones a Medida</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-400 mb-2">Mensaje</label>
                  <textarea
                    rows="4"
                    name="message"
                    required
                    class="w-full bg-dark-lighter/80 border border-gray-800 rounded-xl px-4 py-3 text-white focus:outline-none focus:border-accent-cyan/50 focus:ring-1 focus:ring-accent-cyan/50 transition-colors placeholder-gray-600"
                    placeholder="Ej: Necesito una web para mi negocio / un sistema para controlar stock..."
                  ></textarea>
                </div>
              </div>
              <div class="pt-8 mt-auto">
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full px-6 py-4 border border-white/20 text-white font-bold rounded-xl hover:bg-white/5 transition-all duration-300 flex items-center justify-center gap-2"
                >
                  <span id="btn-text">Enviar Consulta</span>
                  <svg id="btn-spinner" class="hidden animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <style>
    /* Success icon animation */
    .success-icon .circle {
      stroke-dasharray: 283;
      stroke-dashoffset: 283;
      animation: draw-circle 0.6s ease-out forwards;
    }
    
    .success-icon .check {
      stroke-dasharray: 60;
      stroke-dashoffset: 60;
      animation: draw-check 0.4s ease-out 0.4s forwards;
    }
    
    @keyframes draw-circle {
      to {
        stroke-dashoffset: 0;
      }
    }
    
    @keyframes draw-check {
      to {
        stroke-dashoffset: 0;
      }
    }
    
    #success-overlay.show {
      opacity: 1;
      pointer-events: auto;
    }

    /* Style select options for dark theme */
    select option {
      background-color: #0a0a0f;
      color: white;
      padding: 12px;
    }
  </style>

  <script>
    document.addEventListener('astro:page-load', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const btnText = document.getElementById('btn-text') as HTMLSpanElement;
      const btnSpinner = document.getElementById('btn-spinner') as SVGElement;
      const successOverlay = document.getElementById('success-overlay') as HTMLDivElement;

      if (!form) return;

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Show loading state
        submitBtn.disabled = true;
        btnText.textContent = 'Enviando...';
        btnSpinner.classList.remove('hidden');
        
        const formData = new FormData(form);
        const data = {
          name: formData.get('name'),
          email: formData.get('email'),
          subject: formData.get('subject'),
          message: formData.get('message'),
        };

        try {
          const response = await fetch('/api/send-email', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });

          const result = await response.json();

          if (result.success) {
            // Show success animation
            successOverlay.classList.add('show');
            form.reset();
            
            // Hide after 4 seconds
            setTimeout(() => {
              successOverlay.classList.remove('show');
            }, 4000);
          } else {
            alert('Error al enviar: ' + (result.error || 'Intenta nuevamente'));
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Error de conexión. Por favor intenta nuevamente.');
        } finally {
          // Reset button state
          submitBtn.disabled = false;
          btnText.textContent = 'Enviar Consulta';
          btnSpinner.classList.add('hidden');
        }
      });
    });
  </script>
</Layout>
